{
    "CORS": {
        "allow_origins": [
            "*",
            "http://localhost"
        ],
        "allow_methods": [
            "*",
            "POST",
            "GET",
            "PUT",
            "OPTIONS",
            "DELETE"
        ],
        "allow_headers": [
            "*"
        ],
        "allow_credentials": true
    },

    "logs": {
        "timing_activated": true,
        "log_level": "info",
        "log_path": "/tmp/aipi",
        "log_format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
    },

    "prometheus": {
        "active": false,
        "host": "http://localhost:9090",
        "instrumentator": {
            "should_group_status_codes": true,
            "should_ignore_untemplated": false,
            "should_group_untemplated": true,
            "should_respect_env_var": false,
            "env_var_name": "ENABLE_METRICS",
            "excluded_handlers": [".*admin.*", "/metrics"],
            "should_round_latency_decimals": false,
            "round_latency_decimals": 4,
            "should_instrument_requests_inprogress": false,
            "inprogress_name": "inprogress",
            "inprogress_labels": false
        }
    },

    "active_tasks": {
        "image": {
            "image":["*"],
            "text": ["*"],
            "video": ["*"],
            "audio": ["*"]
        },
        "video": {
            "image":["*"],
            "text": ["*"],
            "video": ["*"],
            "audio": ["*"]
        },
        "text": {
            "image":["*"],
            "text": ["*"],
            "video": ["*"],
            "audio": ["*"]
        },
        "audio": {
            "image":["*"],
            "text": ["*"],
            "video": ["*"],
            "audio": ["*"]
        }
    },

    "server": {
        "port": 443,
        "protocol": "https://",
        "full_host_name": "paperswithapi.com",
        "api_location": "{protocol}{full_host_name}:{port_number}"
    },

    "triton" : {
        "models_to_preload": [
            "language-detection_papluca_xlm-roberta-base-language-detection_tensorrt_inference",
            "named-entity-recognition_dbmdz_bert-large-cased-finetuned-conll03-english_tensorrt_inference",
            "sentiment-analyses_nlptown_bert-base-multilingual-uncased-sentiment_tensorrt_inference",
            "sentence-transformers_all-MiniLM-L6-v2_tensorrt_inference",
            "sentence-transformers_paraphrase-MiniLM-L6-v2_tensorrt_inference"
        ]
    },
    "subprocess_to_apify": [
        "/image/text/ocr-models/tesseract-denoising/",
        "/image/text/ocr-models/easy-ocr/env.yaml"
    ]
}
